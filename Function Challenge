#Password Checker
def check_password():
    common_passwords = [
        "123456", "password", "123456789", "12345678", "12345",
        "1234567", "1234567890", "qwerty", "abc123", "password1"
    ]
    
    user_password = input("Enter your password: ")
    if user_password in common_passwords:
        print(f"Use a safer password, '{user_password}' is compromised.")
    else:
        print("Password is safe.")

check_password()

#Simple Calculator
def simple_calc():
    num1 = float(input("Enter the first number: "))
    num2 = float(input("Enter the second number: "))

    sum_result = num1 + num2
    sub_result = num1 - num2
    mul_result = num2 * num1

    print(f"Sum is {sum_result}, Subtraction is {sub_result}, and Multiplication is {mul_result} ")

simple_calc()

#Highest Number
def higher_num():
    num1 = float(input("Enter the first number: "))
    num2 = float(input("Enter the second number: "))
    num3 = float(input("Enter the third number: "))

    if num1 > num2 and num1 > num3:
        print(f"{num1} is the highest number among {num1}, {num2}, and {num3}")
    elif num2 > num1 and num2 > num3:
        print(f"{num2} is the highest number among {num1}, {num2}, and {num3}")
    elif num3 > num1 and num3 > num2:
        print(f"{num3} is the highest number among {num1}, {num2}, and {num3}")
    else:
        print("There is a tie or invalid input")
higher_num()

#Odd or Even
def odd_even():
    num = int(input("Enter a number: "))

    if num % 2 == 0:
        print (f"{num} is even.")
    else:
        print (f"{num} is odd. ")

odd_even()

#Uppercase
def upper_case():
    sentence = input("Enter a sentence: ")

    uppercase_sentence = sentence.upper()
    print(uppercase_sentence)

upper_case()

#Area of Circle
import math

def calculate_area_of_circle():
    radius = float(input("Enter the radius of the circle: "))
    
    area = math.pi * (radius ** 2)
    print(f"The area of the circle with radius {radius} is {area:.2f}")

calculate_area_of_circle()

#ConvertMetrics
def celsius_to_fahrenheit():
    celsius = float(input("Enter the temperature in degrees Celsius: "))
    
    fahrenheit = (celsius * 9/5) + 32
    print(f"{celsius} degrees Celsius is equal to {fahrenheit:.2f} degrees Fahrenheit")

celsius_to_fahrenheit()


